<Window x:Class="AT3_Project.Insertwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AT3_Project"
        mc:Ignorable="d"
        Title="Adding a new employee" Height="450" Width="800"
        Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="24"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
        <!-- <Label Content="employee__id" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="1" VerticalAlignment="Top" Width="254"/> -->
        <Label Content="given__name" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="2" VerticalAlignment="Top" Width="248"/>
        <Label Content="family__name" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="3" VerticalAlignment="Top" Width="254"/>
        <Label Content="date__of__birth" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="4" VerticalAlignment="Top" Width="264"/>
        <Label Content="gender__identity" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="5" VerticalAlignment="Top" Width="264"/>
        <Label Content="gross__salary" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="6" VerticalAlignment="Top" Width="264"/>
        <Label Content="supervisor__id" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="7" VerticalAlignment="Top" Width="264"/>
        <Label Content="branch__id" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="8" VerticalAlignment="Top" Width="264"/>
      <!--  <TextBox x:Name="IdText" HorizontalAlignment="Left" Height="28" Margin="0.4,10.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" RenderTransformOrigin="0.852,2.951" Grid.Column="2" Grid.Row="1"/> -->
        <TextBox x:Name="GivennameText" HorizontalAlignment="Left" Height="28" Margin="0.4,10.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" RenderTransformOrigin="0.852,2.951" Grid.Column="2" Grid.Row="2"/>
        <TextBox x:Name="FamilynameText" HorizontalAlignment="Left" Height="28" Margin="0.4,10.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" RenderTransformOrigin="0.852,2.951" Grid.Column="2" Grid.Row="3"/>
        <TextBox x:Name="BirthdayText" HorizontalAlignment="Left" Height="28" Margin="0.4,10.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" RenderTransformOrigin="0.852,2.951" Grid.Column="2" Grid.Row="4"/>
        <TextBox x:Name="GenderText" HorizontalAlignment="Left" Height="28" Margin="0.4,10.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" RenderTransformOrigin="0.852,2.951" Grid.Column="2" Grid.Row="5"/>
        <TextBox x:Name="GrossSalaryText" HorizontalAlignment="Left" Height="28" Margin="0.4,10.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" RenderTransformOrigin="0.852,2.951" Grid.Column="2" Grid.Row="6"/>
        <TextBox x:Name="SupervisorIdText" HorizontalAlignment="Left" Height="28" Margin="0.4,10.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" RenderTransformOrigin="0.852,2.951" Grid.Column="2" Grid.Row="7"/>
        <TextBox x:Name="BranchText" HorizontalAlignment="Left" Height="28" Margin="0.4,10.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" RenderTransformOrigin="0.852,2.951" Grid.Column="2" Grid.Row="8"/>
        <Button x:Name="InsertButton" Content="INSERT EMPLOYEE" Grid.Column="2" HorizontalAlignment="Left"  Grid.Row="9" VerticalAlignment="Top" Width="228" Height="30" Click="InsertButton_Click" Margin="0,10,0,0"/>

        <Button x:Name="ClearButton" Content="CLEAR" Grid.Column="2" HorizontalAlignment="Left" Margin="244,10,0,0" Grid.Row="9" VerticalAlignment="Top" Width="228" Height="30" Click="ClearButton_Click"/>


    </Grid>
</Window>
