<Window x:Class="AT3_Project.Updaterecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AT3_Project"
        mc:Ignorable="d"
        Title="Updaterecord" Height="450" Width="800"
        Background="LightBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="158*"/>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="8"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8"/>
        </Grid.RowDefinitions>
        <Label x:Name="SelectedEmployeeId" Content="employee__id" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" HorizontalContentAlignment="Left" Height="26"/>
        <Label x:Name="SalaryUpdate" Content="New Salary" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" HorizontalContentAlignment="Left" Height="26"/>
        <TextBox x:Name="EmployeeTextBox" TextWrapping="Wrap" Text="" Grid.Column="2" Margin="2,10,7,10" Grid.Row="2" IsReadOnly="False"/>
        <TextBox x:Name="SalaryTextBox" TextWrapping="Wrap" Text="" Grid.Column="2" Margin="2,10,2,10" Grid.Row="3"/>
        <StackPanel x:Name="ButtonStackPanel" Grid.Column="2" Grid.Row="4" Orientation="Horizontal">
            <Button x:Name="Save" Background="LightGray" Foreground="Black" Content="Save" Margin="0,4,0,3.8" Padding="16,4" Click="Save_Click" Width="150"/>
            <Button x:Name="Clear" Background="LightGray" Foreground="Black" Content="Clear"  Margin="0,4,0,3.8" Padding="16,4" Width="150" Click="Clear_Click"/>
            <Button x:Name="Close" Background="LightGray" Foreground="Black" Content="Close"  Margin="0,4,0,3.8" Padding="16,4" Width="150" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
